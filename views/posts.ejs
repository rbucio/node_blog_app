<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= pageTitle %></title>

        <% include ./partials/_headMeta %>

    </head>
    <body>

        <% include ./partials/_navigation %>

        <div class="container allPosts">
            <% posts.forEach(function(post) { %>

                <div class="row">
                    <div class="col-md-12">
                        <h2><%= post.title %></h2>
                        <span><%= post.author %></span> <span><%= moment(post.datePublished, 'YYYYMMDD').utcOffset(-420).fromNow() %></span>


                        <img src="<%= post.image %>" alt="<%= post.title %>" class="img img-responsive">
                        <p><%= post.content %></p>
                    </div>
                </div>

            <% }) %>
        </div>

        <% include ./partials/_scripts %>

    </body>
</html>
